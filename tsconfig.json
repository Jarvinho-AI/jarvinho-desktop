{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node", "electron"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/drive/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/app/renderer",
    "dist"
  ]
}
