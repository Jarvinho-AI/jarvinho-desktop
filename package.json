{
  "name": "jarvinho-drive",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "copy-assets": "cpy src/assets/**/* dist/assets/ --parents",
    "copy-html": "cpy app/index.html ../dist/ --cwd=src",
    "dev": "ts-node src/main.ts",
    "build": "tsc && npm run copy-html && npm run copy-assets",
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "electron-builder": "^24.5.0",
    "cpy-cli": "^4.1.0"
  },
  "build": {
    "appId": "com.jarvinho.drive",
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "extraMetadata": {
      "main": "dist/main/index.js"
    }
  },
  "dependencies": {
    "@types/node": "^22.13.11",
    "@types/ws": "^8.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "ws": "^8.18.1"
  }
}