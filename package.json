{
  "name": "jarvinho-drive",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "ts-node src/main/index.ts",
    "test:client": "npx ts-node src/tests/wsClientTest.ts",
    "test:full": "npm run start:drive & npm run test:client",
    "build": "tsc",
    "electron": "npm run build && electron .",
    "dev": "ts-node src/main/index.ts"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "electron-builder": "^24.5.0"
  },
  "build": {
    "appId": "com.jarvinho.drive",
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "extraMetadata": {
      "main": "dist/main/index.js"
    }
  },
  "dependencies": {
    "@types/node": "^22.13.11",
    "@types/ws": "^8.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "ws": "^8.18.1"
  }
}
